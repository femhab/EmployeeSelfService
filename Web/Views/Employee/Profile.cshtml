                                        <tr>
                                            <th>Name</th>
                                            <th>Relationship</th>
                                            <th>Date of Birth</th>
                                            <th>Phone</th>
                                            <th>Status</th>
                                            <th>Emergency Contact</th>
                                            <th></th>
                                        </tr>
                                    </thead>
