                    <div class="card profile-box flex-fill">
                        <div class="card-body">
                            <h3 class="card-title">Family Dependents @if (Model.AccessType == ViewModel.Enumeration.AccessTypeEnum.Employee){<a href="#" class="edit-icon" data-toggle="modal" data-target="#family_info_modal"><i class="fa fa-pencil"></i></a>}</h3>
