@model ViewModel.Model.EmployeeProfileViewModel

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<!-- Page Content -->
<div class="content container-fluid">

    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <h3 class="page-title">Profile</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a>Employee</a></li>
                    <li class="breadcrumb-item active">Profile</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /Page Header -->

    <div class="card mb-0">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="profile-view">
                        <div class="profile-img-wrap">
                            <div class="profile-img">
                                <a href="#"><img alt="" src="~/img/user.jpg"></a>
                            </div>
                        </div>
                        <div class="profile-basic">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="profile-info-left">
                                        <h3 class="user-name m-t-0 mb-0">@Model.Employee.FirstName.ToLower() @Model.Employee.LastName</h3>
                                        @if (Model.Employee.Unit != null)
                                        {
                                            <h6 class="text-muted">@Model.Employee.Unit.Descc</h6>
                                        }
                                        else
                                        {
                                            <h6 class="text-muted">Unit: Unverified</h6>
                                        }
                                        @if (Model.Employee.Section != null)
                                        {
                                            <div class="staff-id">Section: @Model.Employee.Section.Descc</div>
                                        }
                                        else
                                        {
                                            <div class="staff-id">Section: Unverified</div>
                                        }
                                        @if (Model.Employee.Department != null)
                                        {
                                            <div class="staff-id">Department: @Model.Employee.Department.Descc</div>
                                        }
                                        else
                                        {
                                            <div class="staff-id">Department: Unverified</div>
                                        }

                                        @if (Model.Employee.Division != null)
                                        {
                                            <div class="staff-id">Division: @Model.Employee.Division.Descc</div>
                                        }
                                        else
                                        {
                                            <div class="staff-id">Division: Unverified</div>
                                        }

                                        <div class="staff-id">Employee ID : @Model.Employee.Emp_No</div>
                                        @if (Model.Employee.EmploymentDate != null)
                                        {
                                    <div class="small doj text-muted">Date of Join : @Model.Employee.EmploymentDate?.ToString("dd MMMM yyyy")</div>
                                        }
                                        else
                                        {
                                            <div class="small doj text-muted">Date of Join : Unverified</div>
                                        }

                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <ul class="personal-info">
                                        <li>
                                            <div class="title">GradeLevel</div>
                                            @if (Model.Employee.GradeLevel != null)
                                            {
                                                <div class="text"><a href="">@Model.Employee.GradeLevel.Descc</a></div>
                                            }
                                            else
                                            {
                                                <div class="text"><a href="">Unverified</a></div>
                                            }

                                        </li>
                                        <li>
                                            <div class="title">Location</div>
                                            @if (Model.Employee.Location != null)
                                            {
                                                <div class="text"><a href="">@Model.Employee.Location.Descc</a></div>
                                            }
                                            else
                                            {
                                                <div class="text"><a href="">Unverified</a></div>
                                            }

                                        </li>
                                        <li>
                                            <div class="title">Staff Type</div>
                                            @if (Model.Employee.StaffType != null)
                                            {
                                                <div class="text"><a href="">@Model.Employee.StaffType </a></div>
                                            }
                                            else
                                            {
                                                <div class="text"><a href="">Unverified</a></div>
                                            }

                                        </li>
                                        <li>
                                            <div class="title">Email:</div>
                                            <div class="text"><a href="">@Model.Employee.EmailAddress</a></div>
                                        </li>
                                        <li>
                                            <div class="title">Birthday:</div>
                                            <div class="text"> @Model.Employee.DOB?.ToString("dd MMMM yyyy")</div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card tab-box">
        <div class="row user-tabs">
            <div class="col-lg-12 col-md-12 col-sm-12 line-tabs">
                <ul class="nav nav-tabs nav-tabs-bottom">
                    <li class="nav-item"><a href="#emp_profile" data-toggle="tab" class="nav-link active">Profile</a></li>
